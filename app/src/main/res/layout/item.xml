<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="7dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/cardview_default_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/img_Color"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:scaleType="centerCrop"
                android:transitionName="img"
                tools:ignore=" club colors" />

            <ImageView
                android:id="@+id/shadow_bottom"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignBottom="@id/img_Color"
                android:src="@drawable/bottom_shadow"

                tools:ignore="ContentDescription" />

            <ProgressBar
                android:id="@+id/prograss_load_photo"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp" />


            <TextView
                android:id="@+id/TeamName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_Color"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="16dp"
                android:fontFamily="sans-serif-light"
                android:text="Team name"
                android:textColor="@color/colorTextTitle"
                android:textSize="17sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/TeamWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TeamName"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="16dp"
                android:text="Team website"
                android:textColor="@color/colorTextTitle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TheirVenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TeamWebsite"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="4dp"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Their venue"
                android:textColor="@color/colorTextTitle"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/TeamPlayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TheirVenue"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Text display on all team players"
                android:textColor="@color/colorTextTitle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Colors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TeamPlayers"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Text display on all team players"
                android:textColor="@color/colorTextTitle"
                android:textStyle="bold" />

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Colors"
                android:layout_marginTop="2dp"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Text display on all team players"
                android:textColor="@color/colorTextTitle"
                android:textStyle="bold" />




        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>